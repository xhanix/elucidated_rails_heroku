<div class="row">
<div class="col-xs-8 col-sm-6 col-lg-4 col-md-5  col-centered" style="float: none; margin: 0 auto;">
<div class="well">
<h1>New Plan</h1>

<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class =>'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :stripe_id %>
    <%= f.text_field :stripe_id, :class =>'form-control', placeholder: "unique name for stripe" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class =>'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, :class =>'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :interval %>
    <%= f.text_field :interval, :class =>'form-control', placeholder: "day, week, month or year"%>
  </div>

  <div class="form-group">
    <%= f.label :trial_period_days %>
    <%= f.number_field :trial_period_days, :class =>'form-control'%>
  </div>


 
  <div class="form-group">
 
  <select name="plan[product_id]" class="form-control">
    <% Product.all.each do |product| %>
        <option value="<%= product.id %>"><%= product.name %></option>
    <% end %>
	</select>
  </div>
 
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', plans_path %>
</div>
</div>
</div>
