<div class="row">
  <div class="col-centered" style="float: none; margin: 0 auto;max-width: 600px;width: 400px;">
    <h1 class="display-3 text-center" style="font-family: 'Century Gothic',CenturyGothic,AppleGothic,sans-serif;">My Subscriptions</h1>
    <hr class="my-4">
  </div>
</div>


<div class="row">
  <div class="well" style="float: none; margin: 0 auto;max-width: 600px;height: 250px;">
    <div  class="col-centered" style="float: none; margin: 0 auto;max-width: 600px;width: 400px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-horizontal"}) do |f| %>

      <div class="form-group">
        <%= f.label :email,'Email:', class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email"  %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :password,'License Key:',class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "License Key"  %>

        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <%= f.submit "Log in", class: "btn btn-default" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>